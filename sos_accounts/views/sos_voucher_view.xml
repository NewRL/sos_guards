<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_sos_voucher_filter" model="ir.ui.view">
            <field name="name">sos.voucher.select</field>
            <field name="model">sos.voucher</field>
            <field name="arch" type="xml">
                <search string="Search Vouchers">
                    <field name="number" string="Voucher"/>
                    <field name="date"/>
					<filter icon="terp-document-new" name="state" string="Draft" domain="[('state','=','draft')]" help="Draft Vouchers"/>
					<filter icon="terp-camera_test" name="state" string="Posted" domain="[('state','=','posted')]" help="Posted Vouchers"/>
					<separator/>
					<filter icon="terp-gtk-jump-to-ltr" name="state" string="To Review" domain="[('state','=','posted'), ('audit','=',False)]" help="To Review"/>
                    <field name="post_id"/>
					<field name="journal_id" widget="selection" context="{'journal_id': self, 'set_visible':False}" domain="[('type','in',('bank','cash', 'deduction'))]"/> <!-- Keep widget=selection on this field to pass numeric `self` value, which is not the case for regular m2o widgets! -->
					<field name="period_id"/>
					<group expand="0" string="Extended Filters..." col='8' colspan='4'>
						<field name="reference"/>
						<field name="name"/>
						<field name="narration"/>
						<field name="amount"/>
                   </group>
					<group expand="0" string="Group By">
						<filter string="Post" name="post_id" icon="terp-personal" domain="[]" context="{'group_by':'post_id'}"/>
						<filter string="Journal" name="journal_id" icon="terp-folder-orange" domain="[]" context="{'group_by':'journal_id'}"/>
						<filter string="Period" name="period_id" icon="terp-go-month" domain="[]" context="{'group_by':'period_id','visible':True}"/>
						<filter string="Status" name="state" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        
         <record id="view_sos_voucher_graph" model="ir.ui.view">
			<field name="name">sos.voucher.graph</field>
			<field name="model">sos.voucher</field>
			<field name="arch" type="xml">
				<graph string="Voucher Statistics" type="bar">
					<field name="date"/>
					<field name="amount" operator="+"/>
				</graph>
			</field>
		 </record>

 
        <!-- Customer Payment -->
        <record model="ir.ui.view" id="view_sos_voucher_form">
            <field name="name">sos.voucher.form</field>
            <field name="model">sos.voucher</field>
            <field name="arch" type="xml">
                <form string="Receipt">
                <header invisible="context.get('line_type', False)">
					<button name="proforma_voucher" string="Validate" type="object" states="draft" class="oe_highlight"/>
					<button name="cancel_voucher" string="Cancel Receipt" states="draft,proforma"/>
					<button name="cancel_voucher" string="Unreconcile" type="object" states="posted" confirm="Are you sure to unreconcile and cancel this record ?"/>
					<button name="action_cancel_draft" type="object" states="cancel" string="Set to Draft"/>
					<field name="state" widget="statusbar" statusbar_visible="draft,posted" statusbar_colors='{"proforma":"blue"}'/>
                </header>
                <sheet  string="Accounting Voucher">
                    <h1 attrs="{'invisible': [('number','=',False)]}"><field name="number"/></h1>
                    <group invisible="context.get('line_type', False)">
						<group>
							<field name="post_id" required="1" on_change="onchange_post_id(post_id, journal_id, amount, currency_id, type, date, context)" string="Customer"/>
							<field name="currency_id" invisible="1"/>
							<field name="amount" class="oe_inline"
								string="Paid Amount"
								widget="monetary" options="{'currency_field': 'currency_id'}"
								on_change="onchange_amount(amount, payment_rate, post_id, journal_id, currency_id, type, date, payment_rate_currency_id, company_id, context)"/>
							<field name="journal_id"
								domain="[('type','in',['bank', 'cash', 'deduction'])]"
								widget="selection"
								on_change="onchange_journal(journal_id, line_cr_ids, False, post_id, date, amount, type, company_id, context)"
								string="Payment Method"/>
							<field name="period_id"/>
						</group>
						<group>
							<field name="date" on_change="onchange_date(date, currency_id, payment_rate_currency_id, amount, company_id, context)"/>
							<field name="reference" string="Payment Ref" placeholder="e.g. 003/10"/>
							<field name="name" colspan="2" placeholder="e.g. Invoice SAJ/0042"/>
							<field name="company_id" widget="selection" on_change="onchange_company(post_id, journal_id, currency_id, company_id)"  groups="base.group_multi_company"/>

							<field name="account_id"
								widget="selection"
								invisible="True"/>
							<field name="pre_line" invisible="1"/>
							<field name="type" invisible="True"/>
						</group>
                    </group>
                    
                    <notebook>
						<page string="Payment Information" groups="base.group_user">
							<label for="line_cr_ids" invisible="context.get('line_type', False)"/>
							<field name="line_cr_ids" context="{'journal_id':journal_id, 'type':type, 'post_id':post_id}" on_change="onchange_line_ids(line_dr_ids, line_cr_ids, amount, currency_id, type, context)">
								<tree string="Invoices and outstanding transactions" editable="bottom" colors="gray:amount==0">
									<field name="move_line_id" context="{'journal_id':parent.journal_id, 'post_id':parent.post_id}"
										on_change="onchange_move_line_id(move_line_id)"
										domain="[('account_id.type','in',('receivable','payable')), ('reconcile_id','=', False), ('post_id','=',parent.post_id)]"
										required="1"
										groups="account.group_account_user"/>
									<field name="account_id"  groups="base.group_no_one" domain="[('type','=','receivable')]"/>
									<field name="date_original" readonly="1"/>
									<field name="date_due" readonly="1"/>
									<field name="amount_original" readonly="1"/>
									<field name="amount_unreconciled" readonly="1" groups="account.group_account_user"/>
									<field name="reconcile" on_change="onchange_reconcile(reconcile, amount, amount_unreconciled, context)" groups="account.group_account_user"/>
									<field name="amount" sum="Total Allocation" on_change="onchange_amount(amount, amount_unreconciled, context)" string="Allocation"/>
									<field name="post_id" invisible="1" />
									<field name="invoice_id" invisible="1" />
								</tree>
							</field>
							<label for="line_dr_ids" attrs="{'invisible': [('pre_line','=',False)]}"/>
							<field name="line_dr_ids" attrs="{'invisible': [('pre_line','=',False)]}" context="{'journal_id':journal_id, 'post_id':post_id}" on_change="onchange_line_ids(line_dr_ids, line_cr_ids, amount, currency_id, type, context)">
								<tree string="Credits" editable="bottom" colors="gray:amount==0">
									<field name="move_line_id" context="{'journal_id':parent.journal_id, 'post_id':parent.post_id}"
										on_change="onchange_move_line_id(move_line_id)"
										domain="[('account_id.type','in',('receivable','payable')), ('reconcile_id','=', False), ('post_id','=',parent.post_id)]"
										required="1"/>
									<field name="account_id"  groups="base.group_no_one" domain="[('type','=','receivable')]"/>
									<field name="date_original" readonly="1"/>
									<field name="date_due" readonly="1"/>
									<field name="amount_original" readonly="1"/>
									<field name="amount_unreconciled" readonly="1"/>
									<field name="reconcile" on_change="onchange_reconcile(reconcile, amount, amount_unreconciled, context)"/>
									<field name="amount" sum="Total Allocation" on_change="onchange_amount(amount, amount_unreconciled, context)" string="Allocation"/>
									<field name="post_id" invisible="1" />
									<field name="invoice_id" invisible="1" />
								</tree>
							</field>
							<group col="3">
								<group>
									<field name="narration" colspan="2" nolabel="1" placeholder="Internal Notes"/>
								</group>
								<group col="4" attrs="{'invisible':[('is_multi_currency','=',False)]}">
									<field name="is_multi_currency" invisible="1"/>
									<label for="payment_rate" colspan="1"/>
									<div>
										<field name="payment_rate" required="1" class="oe_inline" on_change="onchange_amount(amount, payment_rate, post_id, journal_id, currency_id, type, date, payment_rate_currency_id, company_id, context)"/>
										<field name="payment_rate_currency_id" class="oe_inline" on_change="onchange_payment_rate_currency(currency_id, payment_rate, payment_rate_currency_id, date, amount, company_id, context)" groups="base.group_multi_currency"/>
									</div>
									<field name="currency_help_label" colspan="2" nolabel="1" class="oe_grey"/>
									<field name="paid_amount_in_company_currency" colspan="4" invisible="1"/>
								</group>
								<group>
									<field name="writeoff_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
									<field name="payment_option" required="1" attrs="{'invisible':[('writeoff_amount','=',0)]}"/>
									<field name="writeoff_acc_id"
										   attrs="{'invisible':['|', ('payment_option','!=','with_writeoff'), ('writeoff_amount','=',0)], 'required':[('payment_option','=','with_writeoff')]}"
										   domain="[('type','=','other')]"/>
									<field name="comment"
										   attrs="{'invisible':['|', ('payment_option','!=','with_writeoff'), ('writeoff_amount','=',0)]}"/>
									<field name="analytic_id"
										   groups="analytic.group_analytic_accounting"
										   attrs="{'invisible':['|', ('payment_option','!=','with_writeoff'), ('writeoff_amount','=',0)]}"/>
								</group>
							</group>
						</page>
						<page string="Journal Items" attrs="{'invisible': [('state','!=','posted')]}">
							<group col="4">								
								<field name="audit"/>
							</group>
							<field name="move_ids" readonly="1">
								<tree string="Journal Items">
									<field name="move_id"/>
									<field name="ref"/>
									<field name="date"/>
									<field name="period_id"/> 
									<field name="statement_id"/>
									<field name="post_id"/> 
									<field name="account_id"/>
									<field name="name"/>
									<field name="debit"/>
									<field name="credit"/>
									<field name="state"/>
									<field name="reconcile_id"/>
									<field name="amount_currency"/>
									<field name="currency_id" groups="base.group_multi_currency"/>
								</tree>
							</field>
						</page>
                    </notebook>
                    
				</sheet>
				<div class="oe_chatter" invisible="context.get('line_type', False)">
					<field name="message_follower_ids" widget="mail_followers"/>
					<field name="message_ids" widget="mail_thread"/>
				</div>
                </form>
            </field>
        </record>

		 <record model="ir.ui.view" id="view_sos_voucher_tree">
			<field name="name">sos.voucher.tree</field>
			<field name="model">sos.voucher</field>
			<field name="arch" type="xml">
				<tree colors="blue:state == 'draft';gray:state == 'cancel';red:audit" string="Voucher Entries">
					<field name="date"/>
					<field name="number"/>
					<field name="reference"/>
					<field name="post_id"/>
					<field name="journal_id" groups="account.group_account_user"/>
					<field name="period_id" invisible="context.get('visible', True)"/>
					<field name="type" invisible="context.get('visible', True)"/>
					<field name="amount" sum="Total Amount"/>
					<field name="audit" invisible="1"/>
					<field name="state"/>	
					
				</tree>
			</field>
        </record>
        
        <record model="ir.actions.act_window" id="action_sos_receipt">
			<field name="name">Post Payments</field>
			<field name="res_model">sos.voucher</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form,graph</field>
			<field name="context">{}</field>
			<field name="view_id" eval="view_sos_voucher_tree"/>
			<field name="search_view_id" ref="view_sos_voucher_filter"/>
			
		</record>
		              
        <record id="action_sos_receipt_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_sos_voucher_tree"/>
            <field name="act_window_id" ref="action_sos_receipt"/>
        </record>
        <record id="action_sos_receipt_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sos_voucher_form"/>
            <field name="act_window_id" ref="action_sos_receipt"/>
        </record>

        


		<record model="ir.ui.view" id="view_multi_post_receipt_form">
			<field name="name">multi.post.receipt.form</field>
			<field name="model">sos.voucher</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Receipt" version="7.0">
					<header>
						<button name="proforma_voucher" string="Validate" type="object" states="draft" class="oe_highlight"/>
						<button name="cancel_voucher" string="Cancel" states="draft,proforma"/>
						<button name="cancel_voucher" string="Unreconcile" type="object" states="posted" confirm="Are you sure to unreconcile and cancel this record ?"/>
						<button name="action_cancel_draft" type="object" states="cancel" string="Set to Draft"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,posted" statusbar_colors='{"proforma":"blue"}'/>
					</header>
					<sheet>
						<h1 attrs="{'invisible': [('number','=',False)]}"><field name="number"/></h1>
						<group>
							<group>
								<field name="journal_id" widget="selection" string="Payment Method" on_change= "onchange_journal_multi_post(journal_id)" domain="[('type','in',['bank', 'cash', 'deduction'])]"/> 
								<field name="amount" class="oe_inline" string="Paid Amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
								<field name="date"/>
								<field name="period_id"/>
							</group>
							<group>
								<field name="reference" string="Payment Ref" placeholder="e.g. 003/10"/>							
								<field name="name" colspan="2" placeholder="e.g. Invoice SAJ/0042"/>

								<field name="account_id" widget="selection" invisible="1"/>
								<field name="type" invisible="1"/>                                
								<field name="pre_line" invisible="1"/>							

							</group>

						</group>
						<notebook>

							<page string="Payment Information">
								<field name="line_cr_ids" default_get="{'journal_id':journal_id, 'type':type, 'post_id':post_id}" colspan="4" nolabel="1" height="140" on_change="onchange_line_ids(line_dr_ids, line_cr_ids, amount,currency_id,type)">
									<tree string="Invoices and outstanding transactions" editable="bottom">

										<field name="post_id" domain="[('active','=',True)]" required="1"
											on_change="onchange_post_id(post_id, parent.journal_id, parent.amount, parent.currency_id, parent.type, invoice_id, context)"/>
										<field name="invoice_id" widget='many2one' domain="[('post_id','=',post_id),('residual','>',0)]" required="1"
											on_change="onchange_post_id(post_id, parent.journal_id, parent.amount, parent.currency_id, parent.type, invoice_id, context)"/>
										<field name="move_line_id" context="{'journal_id':parent.journal_id, 'post_id':parent.post_id}" on_change="onchange_move_line_id(move_line_id)" 
											domain="[('account_id.type','in',('receivable','payable')), ('reconcile_id','=', False), ('post_id','=',parent.post_id)]"
											required="1"/>
										<field name="name" invisible="1"/>
										<field name="type" invisible="1"/>
										<field name="reconcile" invisible="1"/>
										<field name="account_id"  groups="base.group_no_one" domain="[('type','=','receivable')]"/>
										<field name="date_original" readonly="1"/>
										<field name="date_due" readonly="1"/>
										<field name="amount_original" readonly="1"/>
										<field name="amount_unreconciled" sum="Open Balance" readonly="1"/>
										<field name="amount" sum="Payment"/>
									</tree>
								</field>



								<field name="line_dr_ids" colspan="4" nolabel="1" attrs="{'invisible': [('pre_line','=',False)]}" default_get="{'journal_id':journal_id}" on_change="onchange_line_ids(line_dr_ids, line_cr_ids, amount, currency_id, type)">
									<tree string="Credits" editable="bottom">
										<field name="move_line_id"/>
										<field name="account_id"  groups="base.group_extended" domain="[('type','=','receivable')]"/>
										<field name="date_original"/>
										<field name="amount_original"/>
										<field name="amount" sum="Payment"/>
									</tree>
								</field>


								<group col="3">
									<group>
										<separator string="Internal Notes" colspan="2"/>
										<field name="narration" colspan="2" nolabel="1"/>
									</group>


									<group col="4" attrs="{'invisible':[('currency_id','=',False),('is_multi_currency','=',False)]}">
										<field name="is_multi_currency" invisible="1"/>
										<field name="payment_rate" required="1" on_change="onchange_rate(payment_rate, amount, currency_id, payment_rate_currency_id, company_id, context)" colspan="3"/>
										<field name="payment_rate_currency_id" colspan="1" nolabel="1" on_change="onchange_payment_rate_currency(currency_id, payment_rate, payment_rate_currency_id, date, amount, company_id, context)" groups="base.group_multi_currency"/>
										<field name="paid_amount_in_company_currency" colspan="4" invisible="1"/>
									</group>
									<group>
										<separator string="Payment Options" colspan="2"/>
										<field name="writeoff_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
										<field name="payment_option" required="1"/>
										<field name="writeoff_acc_id"
											   attrs="{'invisible':[('payment_option','!=','with_writeoff')], 'required':[('payment_option','=','with_writeoff')]}"
											   domain="[('type','=','other')]"/>
										<field name="comment"
											   attrs="{'invisible':[('payment_option','!=','with_writeoff')]}"/>
										<field name="analytic_id"
											   groups="analytic.group_analytic_accounting"/>
									</group>

								</group>								
							</page>					

							<page string="Journal Items" attrs="{'invisible': [('state','!=','posted')]}">
								<group col="6" colspan="4">
									<!-- <field name="period_id"/> -->
									<field name="audit"/>
								</group>
								<field name="move_ids" colspan="4" nolabel="1" readonly="1">
								   <tree string="Journal Items">
									   <field name="move_id"/>
									   <field name="ref"/>
									   <field name="date"/>
									   <field name="statement_id"/>
									   <field name="account_id"/>
									   <field name="name"/>
									   <field name="debit"/>
									   <field name="credit"/>
									   <field name="state"/>
									   <field name="reconcile_id"/>
									   <field name="amount_currency"/>
									   <field name="currency_id"/>
								   </tree>
								</field> 
							</page>

							<page string="Other Information">
								<group>
									<group>
										<field name="multi_partner"/>
										<field name="post_id"/>								
									</group>
									<group>
										<field name="company_id" widget="selection" groups="base.group_multi_company"/>
										<field name="currency_id"/>
									</group>

								</group>
							</page>							
						</notebook> 
					</sheet>
					<div class="oe_chatter" invisible="context.get('line_type', False)">
						<field name="message_follower_ids" widget="mail_followers"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>
		
				
		
		<record id="action_multi_post_receipt" model="ir.actions.act_window">
			<field name="name">Multi Post Payment</field>
			<field name="res_model">sos.voucher</field>
			<field name="view_type">form</field>
			<field name="domain">[('journal_id.type', 'in', ['bank', 'cash', 'deduction']), ('type','=','receipt'), ('multi_partner','=',True)]</field>
			<field name="context">{'default_type':'receipt','default_multi_partner':True}</field>
			<field name="search_view_id" ref="view_sos_voucher_filter"/>
			<field name="view_id" eval="False"/>
			<field name="target">current</field>
			<field name="help">Sales payment allows you to register the payments you receive from your customers. In order to record a payment, you must enter the customer, the payment method (=the journal) and the payment amount. OpenERP will propose to you automatically the reconciliation of this payment with the open invoices or sales receipts.</field>
		</record>
		<record id="action_multi_post_receipt_tree" model="ir.actions.act_window.view">
			<field eval="1" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="act_window_id" ref="action_multi_post_receipt"/>
		</record>
		<record id="action_multi_post_receipt_form" model="ir.actions.act_window.view">
			<field eval="2" name="sequence"/>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_multi_post_receipt_form"/>
			<field name="act_window_id" ref="action_multi_post_receipt"/>
		</record>

		<menuitem action="action_sos_receipt" sequence="6" id="menu_action_sos_receipt"  parent="menu_finance_posts"/>

		<menuitem action="action_multi_post_receipt" icon="STOCK_JUSTIFY_FILL" sequence="7"
			id="menu_action_multi_post_receipt"  parent="menu_finance_posts"/>





		
    </data>
</odoo>
